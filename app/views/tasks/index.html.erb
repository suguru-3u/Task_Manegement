<h1>タスク一覧</h1>
<%= link_to '新規登録', new_task_path, class: 'btn btn-primary mt-2 mb-4' %>

<div class="md-3">
  <table class='table table-hover'>
    <thead class='thead-default'>
      <tr>
        <th>名称</th>
        <th>登録日時</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <th><%= link_to task.name,task_path(task) %></th>
        <th><%= task.created_at %></th>
        <th><%= link_to '編集',edit_task_path(task),class:'btn btn-primary mr-3' %></th>
        <th><%= link_to '削除', task_path(task),method: :delete,data:{ confirm:"タスク「#{task.name}」を削除します。よろしいですか？" },class: 'btn btn-danger'%></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
